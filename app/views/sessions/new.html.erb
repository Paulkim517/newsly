<style>
    body{
        color: white;
    }
</style>

<div class="col-sm-4 col-sm-offset-4">
  <h4>Log In</h4><hr>
  <%= form_for :user, url: sessions_path do |f| %>
     <%= f.label :email %>:
     <%= f.email_field :email, class:"form-control" %><br />
     <%= f.label :password %>:
     <%= f.password_field :password, class:"form-control" %><br />
     <%= f.submit "Log In", class:"btn btn-danger" %>
  <% end %>
</div>

